<div class="table-responsive">
  <table border="1" class="table table-borderless">
    <thead class="text-nowrap">
      <tr>
        <th>
          ID
        </th>

        <th>
          Content
        </th>

        <th>
          User
        </th>

        <th>
          Link
        </th>

        <th>
          Created at
        </th>

        <th>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td>
          <%= post.id %>
        </td>

        <td>
          <%= post.content %>
        </td>

        <td>
          <%= post.user.username %>
        </td>

        <td>
          <%= post.link %>
        </td>

        <td>
          <%= time_ago_in_words(post.created_at) %> ago
        </td>

        <td>
          <a href="/posts/<%= post.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @posts, theme: 'twitter-bootstrap-4', nav_class: "d-flex my-2", pagination_class: "mx-auto" %>
  </div>
</div>
