<div>
  <div>
    <h1>
      Posts
    </h1>
  </div>
</div>

<div class="my-3">
  <a href="posts/new" class="btn btn-primary">Create Post</a>
</div>

<hr>

<%= search_form_for @q do |f| %>
  <div class="form-group">
    <%= f.label :content_cont, "Content containing" %>
    <%= f.text_field :content_cont, :class => "form-control", :placeholder => "Enter a few characters" %>
  </div>

  <%= f.submit :class => "btn btn-primary btn-block" %>
  
  <a href="/posts">Clear filters</a>
<% end %>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Content
        </th>

        <th>
          User
        </th>

        <th>
          Link
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @posts.each do |a_post| %>
      <tr>
        <td>
          <%= a_post.id %>
        </td>

        <td>
          <%= a_post.content %>
        </td>

        <td>
          <%= a_post.user_id %>
        </td>

        <td>
          <%= a_post.link %>
        </td>

        <td>
          <%= time_ago_in_words(a_post.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_post.updated_at) %> ago
        </td>

        <td>
          <a href="/posts/<%= a_post.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
