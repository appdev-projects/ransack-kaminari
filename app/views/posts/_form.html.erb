<div>
  <div>
    <h2>
      Add a new post
    </h2>

    <form action="/insert_post" method="post">
      <div class="form-group">
        <label for="content_box">
          Content
        </label>

        <textarea id="content_box" name="query_content" rows="3" class="form-control"></textarea>
      </div>

      <div class="form-group">
        <label for="link_box">
          Link
        </label>

        <textarea id="link_box" name="query_link" rows="3" class="form-control"></textarea>
      </div>

      <button class="btn btn-primary">
        Create post
      </button>
    </form>
  </div>
</div>
